# Raw Mix Design Optimizer - Environment Configuration
# Copy this file to .env and fill in your actual values

# Clerk Authentication (Optional - if you want to use Clerk)
CLERK_SECRET_KEY=your_clerk_secret_key_here
CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key_here

# Authentication Settings
REQUIRE_EMAIL_VERIFICATION=false
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5

# Application Settings
APP_NAME=Raw Mix Design Optimizer
APP_VERSION=1.0.0
DEBUG=false

# Database Settings (if you want to customize)
DATABASE_PATH=data/rawmix.db
USERS_DATABASE_PATH=data/users.json

# Security Settings
JWT_SECRET=your_jwt_secret_here_use_strong_random_string
ENCRYPTION_KEY=your_encryption_key_here_32_characters_min